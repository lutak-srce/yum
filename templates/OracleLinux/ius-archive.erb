[ius-archive]
name = IUS for Enterprise Linux <%= @facts['os']['release']['major'] %> - Archive - $basearch
<% if @baseurl -%>
baseurl = <%= @baseurl %>
<% else -%>
baseurl = https://repo.ius.io/archive/<%= @facts['os']['release']['major'] %>/$basearch/
<% end -%>
enabled = 0
repo_gpgcheck = 0
gpgcheck = 1
gpgkey = file:///etc/pki/rpm-gpg/RPM-GPG-KEY-IUS-<%= @facts['os']['release']['major'] %>
<% unless @exclude.empty? -%>
exclude = <%= @exclude.to_a.join(' ') %> 
<% end -%>
<% unless @include.empty? -%>
includepkgs = <%= @include.to_a.join(' ') %> 
<% end -%>

[ius-archive-debuginfo]
name = IUS for Enterprise Linux <%= @facts['os']['release']['major'] %> - Archive - $basearch - Debug
<% if @baseurl -%>
baseurl = <%= @baseurl %>debug/

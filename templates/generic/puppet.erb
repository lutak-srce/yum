[puppet<%= @version %>]
name=Puppet <%= @version %> Repository el <%= @facts['os']['release']['major'] %> - $basearch
<% if @baseurl -%>
baseurl=<%= @baseurl %>
<% else -%>
baseurl=https://yum.puppetlabs.com/puppet<%= @version %>/el/<%= @facts['os']['release']['major'] %>/$basearch
<% end -%>
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-2025-04-06-puppet<%= @version %>-release
       file:///etc/pki/rpm-gpg/RPM-GPG-KEY-puppet<%= @version %>-release
enabled=1
gpgcheck=1
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

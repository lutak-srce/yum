[mongodb]
name=MongoDB <%= @version %> Repository
baseurl=https://repo.mongodb.org/yum/redhat/$releasever/mongodb-org/<%= @version %>/$basearch/
gpgcheck=0
enabled=1
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

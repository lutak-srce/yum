[ownCloud_ce_<%= @version %>]
name=ownCloud Server Version <%= @version %> (CentOS_<%= @operatingsystemmajrelease %>)
type=rpm-md
baseurl=https://download.owncloud.org/download/repositories/<%= @version %>/CentOS_<%= @operatingsystemmajrelease %>/
gpgcheck=1
gpgkey=https://download.owncloud.org/download/repositories/<%= @version %>/CentOS_<%= @operatingsystemmajrelease %>/repodata/repomd.xml.key
enabled=1
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.join(' ') %>
<% end -%>

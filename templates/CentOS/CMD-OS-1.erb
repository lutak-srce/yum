[CMD-OS-1-base]
name=CMD-OS 1 base (CentOS <%= @facts['os']['release']['major'] %>)
baseurl=http://repository.egi.eu/sw/production/cmd-os/1/centos<%= @facts['os']['release']['major'] %>/$basearch/base
enabled=1
gpgcheck=1
protect=1
gpgkey=http://repository.egi.eu/sw/production/umd/UMD-RPM-PGP-KEY
priority = <%= @priority %>
<% unless @exclude.empty? -%>
exclude = <%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs = <%= @include.to_a.join(' ') %>
<% end -%>


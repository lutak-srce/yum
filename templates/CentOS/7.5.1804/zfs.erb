[zfs]
<% if @kmod -%>
name=ZFS on Linux for EL7.5 - kmod
baseurl=http://download.zfsonlinux.org/epel/7.5/kmod/$basearch/
<% else -%>
name=ZFS on Linux for EL7.5 - dkms
baseurl=http://download.zfsonlinux.org/epel/7.5/$basearch/
<% end -%>
enabled=1
metadata_expire=7d
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

[zfs-source]
name=ZFS on Linux for EL7.5 - Source
baseurl=http://download.zfsonlinux.org/epel/7.5/SRPMS/
<% if @source -%>
enabled=1
<% else -%>
enabled=0
<% end -%>
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

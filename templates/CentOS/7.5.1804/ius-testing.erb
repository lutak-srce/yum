[ius-testing]
name=IUS Community Packages for Enterprise Linux 7 - $basearch - Testing
#baseurl=https://dl.iuscommunity.org/pub/ius/testing/CentOS/7/$basearch
mirrorlist=https://mirrors.iuscommunity.org/mirrorlist?repo=ius-centos7-testing&arch=$basearch&protocol=http
failovermethod=priority
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/IUS-COMMUNITY-GPG-KEY
priority=<%= @priority %>
<% if @exclude.to_s != '' -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% if @include.to_s != '' -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

[ius-testing-debuginfo]
name=IUS Community Packages for Enterprise Linux 7 - $basearch - Testing Debug
#baseurl=https://dl.iuscommunity.org/pub/ius/testing/CentOS/7/$basearch/debuginfo

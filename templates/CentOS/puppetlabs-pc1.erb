[puppetlabs-pc1]
name=Puppet Labs PC1 Repository el <%= @facts['os']['release']['major'] %> - $basearch
<% if @baseurl -%>
baseurl=<%= @baseurl %>
<% else -%>
baseurl=http://yum.puppetlabs.com/el/<%= @facts['os']['release']['major'] %>/PC1/$basearch
<% end -%>
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-puppetlabs-PC1
       file:///etc/pki/rpm-gpg/RPM-GPG-KEY-puppet-PC1
enabled=1
gpgcheck=1
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

[puppetlabs-pc1-source]
name=Puppet Labs PC1 Repository el <%= @facts['os']['release']['major'] %> - Source
<% if @baseurl -%>
baseurl=<%= @baseurl.sub('$basearch','SRPMS') %>
<% else -%>
baseurl=http://yum.puppetlabs.com/el/<%= @facts['os']['release']['major'] %>/PC1/SRPMS
<% end -%>
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-puppetlabs-PC1
       file:///etc/pki/rpm-gpg/RPM-GPG-KEY-puppet-PC1
failovermethod=priority
enabled=0
gpgcheck=1
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

[zfs]
name=ZFS on Linux for EL7
<% if @kmod -%>
baseurl=http://archive.zfsonlinux.org/epel/7/kmod/$basearch/
<% else -%>
baseurl=http://archive.zfsonlinux.org/epel/7/$basearch/
<% end -%>
enabled=1
metadata_expire=7d
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.join(' ') %>
<% end -%>

[zfs-source]
name=ZFS on Linux for EL7 - Source
baseurl=http://archive.zfsonlinux.org/epel/7/SRPMS/
<% if @source -%>
enabled=1
<% else -%>
enabled=0
<% end -%>
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-zfsonlinux
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.join(' ') %>
<% end -%>

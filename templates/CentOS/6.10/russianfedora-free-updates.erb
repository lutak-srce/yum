[russianfedora-free-updates]
name=Russian Fedora for EL $releasever - Free - Updates
#baseurl=http://mirror.yandex.ru/fedora/russianfedora/russianfedora/free/el/updates/$releasever/$basearch
mirrorlist=http://mirrors.rfremix.ru/mirrorlist?repo=free-reremix-updates-released-$releasever&arch=$basearch
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-russianfedora-free-fedora
priority=<%= @priority %>
<% if @exclude.to_s != '' -%>
exclude=<%= @exclude.to_a.join(' ') %> 
<% end -%>
<% if @include.to_s != '' -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

[russianfedora-free-updates-debuginfo]
name=Russian Fedora for EL $releasever - Free - Updates Debug
baseurl=http://mirror.yandex.ru/fedora/russianfedora/russianfedora/free/el/updates/$releasever/$basearch/debug
<% if @debuginfo -%>
enabled=1
<% else -%>
enabled=0
<% end -%>
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-russianfedora-free-fedora

[russianfedora-free-updates-source]
name=Russian Fedora for EL $releasever - Free - Updates Source
baseurl=http://mirror.yandex.ru/fedora/russianfedora/russianfedora/free/el/updates/$releasever/SRPMS
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-russianfedora-free-fedora


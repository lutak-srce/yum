[russianfedora-free]
name=Russian Fedora for EL $releasever - Free
#baseurl=http://mirror.yandex.ru/fedora/russianfedora/russianfedora/free/el/releases/$releasever/Everything/$basearch/os
mirrorlist=http://mirrors.rfremix.ru/mirrorlist?repo=free-reremix-$releasever&arch=$basearch
enabled=1
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-russianfedora-free-fedora
priority=<%= @priority %>
<% if @exclude.to_s != '' -%>
exclude=<%= @exclude.to_a.join(' ') %> 
<% end -%>
<% if @include.to_s != '' -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

[russianfedora-free-debuginfo]
name=Russian Fedora for EL $releasever - Free - Debug
baseurl=http://mirror.yandex.ru/fedora/russianfedora/russianfedora/free/el/releases/$releasever/Everything/$basearch/debug
<% if @debuginfo -%>
enabled=1
<% else -%>
enabled=0
<% end -%>
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-russianfedora-free-fedora

[russianfedora-free-source]
name=Russian Fedora for EL $releasever - Free - Source
baseurl=http://mirror.yandex.ru/fedora/russianfedora/russianfedora/free/el/releases/$releasever/Everything/source/SRPMS
enabled=0
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-russianfedora-free-fedora


[beegfs]
name=BeeGFS <%= @version %> (RHEL<%= @facts['os']['release']['major'] %>)
<% if @baseurl -%>
baseurl=<%= @baseurl %>
<% else -%>
baseurl=https://www.beegfs.io/release/beegfs_<%= @version %>/dists/rhel<%= @facts['os']['release']['major'] %>
<% end -%>
gpgkey=https://www.beegfs.io/release/beegfs_<%= @version %>/gpg/GPG-KEY-beegfs
gpgcheck=1
enabled=1
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>

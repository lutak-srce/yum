[wazuh]
name = WAZUH Repository - www.wazuh.com
<% if @operatingsystem == 'CentOS' and @operatingsystemmajrelease == '5' -%>
baseurl = https://packages.wazuh.com/yum/el/$releasever/$basearch
gpgkey = https://packages.wazuh.com/key/RPM-GPG-KEY-OSSEC-RHEL5
<% else -%>
baseurl = https://packages.wazuh.com/yum/el/$releasever/$basearch
gpgkey = https://packages.wazuh.com/key/GPG-KEY-WAZUH
<% end -%>
gpgcheck = 1
enabled = 1
priority=<%= @priority %>
<% unless @exclude.empty? -%>
exclude=<%= @exclude.to_a.join(' ') %>
<% end -%>
<% unless @include.empty? -%>
includepkgs=<%= @include.to_a.join(' ') %>
<% end -%>
